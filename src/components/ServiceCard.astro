---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <div class="relative mb-6">
    <div class="w-16 h-16 border-2 border-primary-300 rounded-lg flex items-center justify-center">
      <i class={`${icon} text-3xl text-primary-600`}></i>
    </div>
    <div class="absolute -bottom-1 -right-1 w-16 h-16 border-2 border-primary-200 rounded-lg opacity-50"></div>
  </div>
  
  <h3 class="text-2xl font-bold mb-4 text-gray-800">{title}</h3>
  <p class="text-gray-600 mb-6">{description}</p>
  
  <a href="#" class="inline-flex items-center text-primary-600 hover:text-primary-700 transition-colors">
    Learn more
    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </a>
</div>