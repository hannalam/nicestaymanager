---
import Layout from '../layouts/Layout.astro';
const translations = await import('../i18n/fr.json');
const t = translations.default;
---

<Layout title={t.faq.title} lang="fr">
  <main class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-12">{t.faq.title}</h1>
    
    <div class="space-y-4">
      {t.faq.questions.map((faq, index) => (
        <div class="border border-gray-200 rounded-lg">
          <button
            class="w-full px-6 py-4 text-left text-lg font-medium text-gray-900 focus:outline-none"
            onclick={`document.getElementById('faq-${index}').classList.toggle('hidden')`}
          >
            {faq.question}
            <span class="float-right">+</span>
          </button>
          <div id={`faq-${index}`} class="hidden px-6 pb-4 text-gray-600">
            {faq.answer}
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>