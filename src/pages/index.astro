---
import Layout from '../layouts/Layout.astro';
const translations = await import('../i18n/fr.json');
const t = translations.default;
---

<Layout title={t.home.title} lang="fr">
  <div class="relative">
    <!-- Hero Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-primary-800 opacity-90">
      <div class="absolute inset-0 bg-[url('/images/hero-bg.jpg')] bg-cover bg-center mix-blend-overlay"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center text-white">
      <h1 class="text-5xl sm:text-6xl font-bold mb-8">
        {t.home.welcome}
      </h1>
      <p class="text-xl sm:text-2xl max-w-3xl mx-auto mb-12 leading-relaxed">
        {t.home.description}
      </p>
      <a
        href="/services"
        class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-primary-700 bg-white hover:bg-gray-50 transition-colors duration-300 mb-12"
      >
        {t.home.learnMore}
        <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
      
      <div class="max-w-4xl mx-auto">
        <img 
          src="/images/bg/bg1.JPEG" 
          alt="Nice Stay Manager Location" 
          class="rounded-lg shadow-xl w-full object-cover h-[400px]"
        />
      </div>
    </div>
  </div>
</Layout>