---
import Layout from '../../layouts/Layout.astro';
const translations = await import('../../i18n/zh.json');
const t = translations.default;
---

<Layout title={t.pricing.title} lang="zh">
  <main class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-12">{t.pricing.title}</h1>
    
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-semibold mb-6">{t.pricing.subtitle}</h2>
      <ul class="space-y-4">
        {t.pricing.features.map(feature => (
          <li class="flex items-start">
            <svg class="h-6 w-6 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{feature}</span>
          </li>
        ))}
      </ul>
    </div>
  </main>
</Layout>